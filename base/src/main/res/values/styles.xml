<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="text_dark" format="color" />
    <!-- This is the color of the background of the icons in the right of the list_item_artifo_ending items -->
    <attr name="artifo_ending_badge_color" format="color" />
    <attr name="overlay_color" format="color" />

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorAccent</item>

        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>

        <item name="materialAlertDialogTheme">
            @style/ThemeOverlay.MaterialComponents.MaterialAlertDialog
        </item>

        <item name="text_dark">@color/bg_color_dark</item>
        <item name="artifo_ending_badge_color">@color/artifo_ending_badge_color_light</item>
        <item name="overlay_color">@color/loading_overlay_light</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="fontFamily">@font/cabin</item>
    </style>

    <style name="AppTheme.Intro">
        <item name="android:windowBackground">@color/intro_green</item>
    </style>

</resources>
