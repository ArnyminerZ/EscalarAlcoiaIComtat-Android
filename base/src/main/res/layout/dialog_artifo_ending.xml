<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/MaterialAlertDialog.App">

    <TextView
        android:id="@+id/artifoTitle_textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/placeholder"
        android:textSize="24sp"
        android:textColor="?attr/text_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/artifoDialogRecyclerView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/artifoTitle_textView" />

    <ImageView
        android:id="@+id/artifoEndingTypeImageView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:contentDescription="@string/image_desc_ending_type"
        app:tint="?attr/text_dark"
        app:layout_constraintBottom_toBottomOf="@+id/artifoTitle_textView"
        app:layout_constraintStart_toEndOf="@+id/artifoTitle_textView"
        app:layout_constraintTop_toTopOf="@+id/artifoTitle_textView"
        app:srcCompat="@drawable/ic_descens_caminant" />
</androidx.constraintlayout.widget.ConstraintLayout>