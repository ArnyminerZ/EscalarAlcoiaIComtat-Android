<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="4dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/source_sans_pro"
                android:text="@string/placeholder"
                android:textColor="?attr/text_dark"
                android:textSize="18sp"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/grade_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="0"
                android:fontFamily="@font/dosis_extrabold"
                android:gravity="center_vertical"
                android:text="@string/placeholder"
                android:textColor="?attr/text_dark"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="2dp"/>

            <TextView
                android:id="@+id/attempts_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder_numeric"
                android:layout_gravity="center_vertical"
                android:textColor="?attr/text_dark"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                app:drawableStartCompat="@drawable/ic_round_swap_vertical_circle_24"/>

            <TextView
                android:id="@+id/hangs_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:text="@string/placeholder_numeric"
                android:layout_gravity="center_vertical"
                android:textColor="?attr/text_dark"
                android:layout_weight="0"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                app:drawableStartCompat="@drawable/ic_round_pause_circle_filled_24"/>

            <ImageButton
                android:id="@+id/share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_round_share_24"
                android:background="@drawable/transparent"
                android:contentDescription="@string/image_desc_share"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="4dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>